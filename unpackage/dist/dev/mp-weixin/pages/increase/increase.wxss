
.content {
	margin-bottom: 100rpx;
}
.content .item {
	display: flex;
	font-size: 26rpx;
	padding: 10rpx 0;
	border-bottom: 3rpx solid #dcdcdc;
}
.item .title {
	flex: 1;
	color: #27ae62;
	padding: 28rpx 0;
	text-align: right;
}
.item .value {
	flex: 2;
	color: #737373;
	padding: 28rpx 0 28rpx 20rpx;
}
.content button {
	color: #fff;
	background-color: #27AE62;
	margin-top: 80rpx;
}

