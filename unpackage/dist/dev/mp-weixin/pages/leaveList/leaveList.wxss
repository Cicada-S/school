
.home-nav {
    background-color: #27ae62;
    color: #fff;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 9;
}
.content {
	padding:0 18rpx;
	border-bottom: 6rpx solid #dcdcdc;
}
.content .leaveItem {
	display: flex;
	padding: 24rpx 0;
	border-top: 3rpx solid #dcdcdc;
}
.leaveItem .Pic {
	width: 90rpx;
	height: 90rpx;
}
.leaveItem .center {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	margin: 0 10rpx;
}
.leaveItem .center .top {
	font-size: 36rpx;
	font-weight: 500;
}
.center .top text {
	margin-right: 15rpx;
}
.leaveItem .center .bottom {
	font-size: 24rpx;
	color: #757575;
}
.center .bottom .highlight {
	color: #fff;
	background-color: #27ae62;
	border-radius: 10rpx;
	padding: 3rpx 8rpx;
	margin-right: 20rpx;
	letter-spacing: 1rpx;
}
.leaveItem .right {
	margin: auto;
}
.leaveItem .right image {
	width: 36rpx;
	height: 36rpx;
}
.suspension {
	position: fixed;
	right: 30rpx;
	bottom: 150rpx;
}
.suspension image {
	width: 80rpx;
	height: 80rpx;
}

